        // Make yes button bigger each time
        const currentScale = 1 + (noClickCount * 0.15);
        btnYes.style.transform = `scale(${currentScale})`;

        // Escape immediately on click (unless on last message)
        if (noClickCount < messages.length) {
          escapeButton(e);
        }
      });
