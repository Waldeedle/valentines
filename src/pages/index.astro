      function escapeButton(e) {
        const btn = btnNo;
        const btnRect = btn.getBoundingClientRect();

        // Switch to fixed positioning for full escape range
        btn.classList.add('escaping');

        // Calculate safe zones (away from cursor)
        const padding = 50;
        const btnWidth = btnRect.width;
        const btnHeight = btnRect.height;
        const maxX = window.innerWidth - btnWidth - padding;
        const maxY = window.innerHeight - btnHeight - padding;

        // Get cursor position
        const cursorX = e.clientX;
        const cursorY = e.clientY;

        // Find a position far from the cursor
        let newX, newY;
        let attempts = 0;
        const minDistance = 200;

        do {
          newX = padding + Math.random() * (maxX - padding);
          newY = padding + Math.random() * (maxY - padding);
          const distance = Math.sqrt(Math.pow(newX - cursorX, 2) + Math.pow(newY - cursorY, 2));
          attempts++;
          if (distance > minDistance || attempts > 20) break;
        } while (true);

        btn.style.left = newX + 'px';
        btn.style.top = newY + 'px';
      }

      // On hover: wait 2 seconds then escape (unless on last message)
      btnNo.addEventListener('mouseenter', (e) => {
        // Don't escape on hover if all messages have been shown
        if (noClickCount >= messages.length) return;

        escapeTimer = setTimeout(() => {
          escapeButton(e);
        }, 300);
      });

      // Cancel escape timer if mouse leaves
      btnNo.addEventListener('mouseleave', () => {
        if (escapeTimer) {
          clearTimeout(escapeTimer);
          escapeTimer = null;
        }
      });

      btnNo.addEventListener('click', (e) => {
        // Cancel any pending escape
        if (escapeTimer) {
          clearTimeout(escapeTimer);
          escapeTimer = null;
