    <script>
      // Heart emoji options
      const hearts = ['â¤ï¸', 'ğŸ’•', 'ğŸ’—', 'ğŸ’–', 'ğŸ’“', 'ğŸ’˜'];

      // Create a single floating heart
      function createHeart(options = {}) {
        const heart = document.createElement('span');
        heart.className = 'floating-heart';
        heart.textContent = hearts[Math.floor(Math.random() * hearts.length)];

        // Random horizontal position across full viewport width (-2 to 98 for edge coverage)
        const leftPos = -2 + Math.floor(Math.random() * 100);
        heart.style.setProperty('left', leftPos + 'vw', 'important');
        // Start from bottom of screen
        heart.style.setProperty('bottom', '-50px', 'important');

        // Random duration for variety (2x faster)
        const duration = options.fast ? (3 + Math.random() * 2) : (6 + Math.random() * 4);
        heart.style.animationDuration = duration + 's';

        // Random delay so hearts appear at different heights
        if (options.initialDelay !== undefined) {
          // Negative delay starts animation partway through (heart appears mid-screen)
          heart.style.animationDelay = options.initialDelay + 's';
        }

        // Size variation
        const size = options.fast ? (1.5 + Math.random() * 1.5) : (1 + Math.random() * 1);
        heart.style.fontSize = size + 'rem';

        document.body.appendChild(heart);
        return heart;
      }

